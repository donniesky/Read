<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="1dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/avatar"
            android:layout_margin="@dimen/dp_10"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher"/>

        <RelativeLayout
            android:padding="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_12"
                tools:text="哈拉米修"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/sp_12"
                tools:text="12小时前"/>

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginTop="@dimen/dp_5"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/sp_16"
                tools:text="aklsdjflaasdfsasdfasddfahsasdfasddfkajsdhasdfasd"/>

            <TextView
                android:id="@+id/cmt_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/desc"
                android:layout_marginTop="@dimen/dp_5"
                android:drawableLeft="@drawable/ic_comment_small"
                android:drawablePadding="@dimen/dp_2"
                android:gravity="center"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/sp_12"
                tools:text="123"/>

            <TextView
                android:id="@+id/fav_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/desc"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toRightOf="@+id/cmt_count"
                android:drawableLeft="@drawable/ic_favorite_border_small"
                android:drawablePadding="@dimen/dp_2"
                android:gravity="center"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/sp_12"
                tools:text="123"/>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>