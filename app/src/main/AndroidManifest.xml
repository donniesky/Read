<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="me.donnie.read">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".common.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Read">
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Read.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.community.discuss.DiscussActivity"
                  android:label="@string/app_name"
                  android:theme="@style/AppTheme.Read.Light"/>

        <activity android:name=".ui.explore.rank.RankActivity"
                  android:label="@string/app_name"
                  android:theme="@style/AppTheme.Read.Light"/>

        <activity android:name=".ui.explore.rank.hot.HotRankActivity"
                  android:label="@string/app_name"
                  android:theme="@style/AppTheme.Read.Light"/>

        <activity android:name=".ui.explore.subject.SubjectActivity"
                  android:label="@string/app_name"
                  android:theme="@style/AppTheme.Read.Light"/>

        <activity android:name=".ui.detail.BookDetailActivity"
                  android:label="@string/app_name"
                  android:theme="@style/AppTheme.Read.Light"/>
    </application>

</manifest>